<header>
  <nav class="flex items-center justify-between px-6 py-3 bg-white shadow">
    <!-- 左側：ロゴ -->
    <div class="flex items-center">
      <%= link_to root_path, class: "flex items-center space-x-2" do %>
        <%= image_tag "logo.png", alt: "Logo", class: "h-8 w-auto" %>
      <% end %>
    </div>

    <!-- 右側：メニューとボタン -->
    <div class="flex items-center space-x-2">
      <% if user_signed_in? %>
        <%= link_to "記録一覧", works_path,
          class: "px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700 transition mr-2" %>
        <%= link_to "ログアウト", destroy_user_session_path,
          data: { turbo_method: :delete, turbo_confirm: "ログアウトしますか？" },
          class: "px-4 py-2 border border-blue-600 text-blue-600 rounded hover:bg-blue-50 transition" %>
      <% else %>
        <%= link_to "新規登録", new_user_registration_path,
          class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition" %>
        <%= link_to "ログイン", new_user_session_path,
          class: "px-4 py-2 border border-blue-600 text-blue-600 rounded hover:bg-blue-50 transition" %>
      <% end %>
    </div>
  </nav>
</header>