<h1 class="text-2xl font-bold mb-6">記録一覧</h1>

<% if @works.empty? %>
  <p class="text-gray-500">記録がありません。</p>
<% else %>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @works.each do |work| %>
      <div class="bg-white shadow rounded-lg p-4 flex flex-col justify-between">
        <!-- タイトル -->
        <h2 class="text-lg font-semibold mb-2"><%= work.title %></h2>

        <!-- メモ -->
        <p class="text-gray-600 mb-4"><%= truncate(work.memo, length: 100) %></p>

        <!-- ステータス -->
        <span class="inline-block px-3 py-1 rounded-full text-sm font-medium
          <%= work.status == 0 ? 'bg-yellow-200 text-yellow-800' : 'bg-green-200 text-green-800' %>">
          <%= work.status == 0 ? '未完了' : '完了' %>
        </span>
      </div>
    <% end %>
  </div>
<% end %>