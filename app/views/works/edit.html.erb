<h1 class="text-2xl font-bold mb-6">記録を編集</h1>

<div class="bg-white shadow rounded-lg p-6 max-w-xl mx-auto">
  <%= form_with model: @work, local: true do |f| %>
    <!-- タイトル -->
    <div class="mb-4">
      <%= f.label :title, "タイトル", class: "block text-gray-700 font-semibold mb-1" %>
      <%= f.text_field :title, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <!-- メモ -->
    <div class="mb-4">
      <%= f.label :memo, "メモ", class: "block text-gray-700 font-semibold mb-1" %>
      <%= f.text_area :memo, rows: 5, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <!-- ステータス -->
    <div class="mb-6">
      <%= f.label :status, "ステータス", class: "block text-gray-700 font-semibold mb-1" %>
      <%= f.select :status, [["未完了", 0], ["完了", 1]], {}, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <!-- ボタン -->
    <div class="flex justify-between items-center">
      <%= f.submit "更新する", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
    </div>
  <% end %>
</div>