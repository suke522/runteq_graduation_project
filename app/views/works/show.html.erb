<div class="max-w-3xl mx-auto bg-white shadow rounded-lg p-6 mt-10">
  <!-- タイトル -->
  <h1 class="text-3xl font-bold mb-4 text-gray-800"><%= @work.title %></h1>

<%= form_with model: @work, local: true do |f| %>
  <!-- ステータス -->
  <div class="mb-4">
    <span class="inline-block px-4 py-1 rounded-full text-sm font-semibold
      <%= @work.status == 0 ? 'bg-yellow-200 text-yellow-800' : 'bg-green-200 text-green-800' %>">
      <%= @work.status == 0 ? '未完了' : '完了' %>
    </span>
  </div>

  <!-- 総時間 
  <div class="mb-4">
    <%= f.label :total, "総時間", class: "block text-gray-700 font-semibold mb-2" %>
    <%= f.text_field :total, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300" %>
  </div> -->

  <!-- メモ -->
  <div class="mb-6">
    <h2 class="text-lg font-semibold text-gray-700 mb-2">メモ</h2>
    <p class="text-gray-600 whitespace-pre-line"><%= @work.memo.presence || "メモはありません。" %></p>
  </div>

  <!-- 作成・更新日時 
  <div class="text-sm text-gray-500 mb-6">
    <p>作成日: <%= l(@work.created_at, format: :long) %></p>
    <p>最終更新日: <%= l(@work.updated_at, format: :long) %></p>
  </div> -->

  <div class="mt-4 flex justify-end space-x-2">
          <%= link_to '編集', edit_work_path(@work), class: 'px-3 py-1 bg-blue-500 text-white text-sm rounded hover:bg-blue-600' %>
          <%= link_to '削除', work_path(@work),
                      data: { turbo_method: :delete, turbo_confirm: '本当に削除しますか？' },
                      class: 'px-3 py-1 bg-red-500 text-white text-sm rounded hover:bg-red-600' %>
  </div>
</div>
<% end %>