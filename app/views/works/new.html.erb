<h1 class="text-2xl font-bold mb-6">記録作成</h1>

<%= form_with model: @work, local: true do |f| %>
  <div class="mb-4">
    <%= f.label :title, "タイトル", class: "block text-gray-700 font-semibold mb-2" %>
    <%= f.text_field :title, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300" %>
  </div>

  <div class="mb-4">
    <%= f.label :memo, "メモ", class: "block text-gray-700 font-semibold mb-2" %>
    <%= f.text_area :memo, rows: 5, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300" %>
  </div>

  <!-- 総時間
  <div class="mb-4">
    <%= f.label :total, "総時間", class: "block text-gray-700 font-semibold mb-2" %>
    <%= f.text_field :total, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300" %>
  </div> -->

  <div class="mb-4">
    <%= f.label :status, "ステータス", class: "block text-gray-700 font-semibold mb-2" %>
    <%= f.select :status, [["未完了", "incomplete"], ["完了", "complete"]] %>
  </div>

  <div class="flex justify-end gap-4">
    <%= link_to "キャンセル", works_path, class: "px-4 py-2 border border-gray-400 rounded hover:bg-gray-100" %>
    <%= f.submit "保存", class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
  </div>
<% end %>